<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Subtitle:</strong>
  <%= @article.subtitle %>
</p>

<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>

<p>
  <strong>Link:</strong>
  <%= @article.link %>
</p>


<h2>Comments</h2>

<% @article.comments.each do |comment| %>
	<%= render comment %>
<% end %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<% if @is_admin %>
	<%= link_to 'Edit', edit_article_path(@article) %> |
<% end %>
<%= link_to 'Back', articles_path %>
